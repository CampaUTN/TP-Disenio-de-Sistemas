{{#partial "titulo"}}
Administrar POIs
{{/partial}}

{{#partial "principal"}}
 <h1>Administrar POIs</h1> 
	  

    
    	<form action="/administrarPoi" method="GET">	
    		  <div>
	  			<h4>Tipo:
	  		  <select name = "tipo">
	  		  <option value="Todos">Todos</option>
  	  		  <option value="Negocio">Negocio</option>
  	 		  <option value="EstacionDeColectivo">Estacion de Colectivo</option>
  	 		  <option value="Banco">Banco</option>
  			  <option value="Cgp">CGP</option>
  	 		  </select>
	  			</h4>
	 			</div>
	 		<input class="passwd" type="text" value="all" name="nombre" placeholder="nombre" size="25" max="10">
        	<input class="botonIngresar" type="submit" value="Buscar">
        </form>
        
        
    <br>
    <div>
        <table class="table table-stripped" align="center">
            <tr class="row header">
            <th class="cell" >Nombre</th>
            <th class="cell" >Direccion</th>
            <!-- <th class="cell" >Tipo<br></th> -->
            <th class="cell" >Modificar<br></th>
            <th class="cell" >Eliminar<br></th>
        </tr>
        
        {{#each pois}}
			   <tr class="row">
				   <td>{{nombre}}</td>
				   <td>{{direccion}}</td>
				   <!-- <td>{{poi_tipo}}</td> -->
				   <td>
				   		<form action="/modificarPoi" method="GET">
				   			<input type="hidden" name=poiId value={{id}} >
				   			<input type="submit" value="M">
				   		</form>
				   </td>
				   <td>
				   		<form action="/bajaPoi" method="POST">
				   			<input type="hidden" name=poiId value={{id}} >
				   			<input type="submit" value="X">
				   		</form>
				   </td>
			  </tr>
		      {{/each}}
        </table>
    </div>
    <br>
    <br>
{{/partial}}
{{>layout.hbs}}

